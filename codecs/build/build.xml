<project name="codecs" default="dist" basedir="."
         xmlns:buildflex="http://www.buildflex.com/ant/buildflex">

  <description>codecs build file</description>

  <!--
  Imports
  -->

  <import file="../../../build/workspace-defs.xml"/>
  <import file="${workspace.build}/targets-external.xml"/>

  <!--
  Initialize the build system.
  
  This target is called by the buildmagic initialization logic and should
  contain the module specific configuration elements.
  -->

  <target name="module-init">
    <!-- ========= -->
    <!-- Metadata  -->
    <!-- ========= -->
    <property name="module.name" value="codecs"/>
    <property name="module.version" value="DEV"/>
    <!-- ========= -->
    <!-- Libraries -->
    <!-- ========= -->
    <path id="library.classpath">
    </path>
    <!-- ========= -->
    <!-- Modules   -->
    <!-- ========= -->
    <path id="dependentmodule.classpath">
    </path>
    <!-- ========= -->
    <!-- Tasks     -->
    <!-- ========= -->
  </target>

  <target name="module-jars">
    <copy todir="${build.classes}">
      <fileset dir="${source.java}" includes="**/resource.properties"/>
    </copy>
    <copy todir="${build.classes}/META-INF/services" flatten="true">
      <fileset dir="${source.java}" includes="**/META-INF/services/*"/>
    </copy>
  </target>

</project>
